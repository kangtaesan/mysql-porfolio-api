{
    "version": 2,
    "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["node_modules/swagger-ui-dist/**", "schemas/**/*.yaml"]
      }
    }
  ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/index.js" },
        { "src": "/api-docs(?:/.*)?", "dest": "/api/index.js" },  
        { "src": "/api-docs.json", "dest": "/api/index.js" },
        { "src": "/", "dest": "/api/index.js" }
  ]
  }